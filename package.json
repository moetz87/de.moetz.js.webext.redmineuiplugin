{
    "name": "de.moetz.js.webext.redmineuiplugin",
    "version": "1.0.7",
    "scripts": {
        "build": "npm run webpack -- --mode production && npm run mkdir -- build/dist/ && npm run zip",
        "start": "concurrently \"npm run webpack -- --mode development --watch\" \"npm run webext\"",
        "webpack": "webpack --config webpack.config.js",
        "webext": "web-ext run --firefox=firefox",
        "zip": "bestzip build/dist/$npm_package_name-$npm_package_version.zip $npm_package_zipFiles",
        "mkdir": "mkdirp"
    },
    "zipFiles": "manifest.json icons/ settings/ content-scripts/ background-scripts/",
    "dependencies": {
        "ts-common": "1.0.26",
        "uuid": "3.1.0"
    },
    "devDependencies": {
        "bestzip": "2.0.0",
        "concurrently": "4.0.1",
        "mkdirp": "0.5.1",
        "tslint": "5.8.0",
        "tslint-microsoft-contrib": "5.0.1",
        "ts-loader": "4.5.0",
        "typescript": "3.0.3",
        "web-ext": "2.9.0",
        "webpack": "4.17.1",
        "webpack-cli": "3.1.0"
    }
}
