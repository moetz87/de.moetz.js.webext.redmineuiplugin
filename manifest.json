{
    "manifest_version": 2,
    "name": "Redmine UI Plugin",
    "version": "1.0.1",
    "description": "Eine Webextension zur Anpassung der Redmine-Oberfl√§che.",
    "author": "Marco Oetz",
    "applications": {
        "gecko": {
            "id": "redmineuiplugin@marcooetz.de"
        }
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["ui-modifier/main.js"]
    }],
    "icons": {
        "48": "icons/logo.png"
    },
    "options_ui": {
        "page": "settings/index.html"
    },
    "permissions": ["storage", "tabs", "activeTab"]
}